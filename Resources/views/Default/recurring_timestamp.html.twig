{% extends 'BCCResqueBundle::layout.html.twig' %}
{% block body %}
{% include "BCCResqueBundle:Default:_menu.html.twig" with {activeNav: 'none'} %}
<div class="container">
    <div class="row span12">
        <h2>Jobs Recurring for {{ timestamp|date('Y-m-d H:i:s') }}</h2>
        <p><a href="{{ path('recurring_job_list') }}">Back to all Recurring Jobs</a></p>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Job</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                <tr>
                    <th class="span1">{{ loop.index }}</th>
                    <td class="span11">
                        <pre>{{ job }}</pre>
                    </td>
                    <td class="span11">
                        <pre><a href="/jobs/remove?id={{ job }}" class="btn btn-danger">Remove</a></pre>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
