{% extends 'BCCResqueBundle::layout.html.twig' %}
{% block body %}
{% include "BCCResqueBundle:Default:_menu.html.twig" with {activeNav: jobType} %}
<div class="container">
    <div class="row col-md-12">
        <h2>Jobs {{ jobType|title }} for {{ timestamp|date('Y-m-d H:i:s') }}</h2>
        <p><a href="{{ path('job_list', {'jobType': jobType}) }}">Back to all {{ jobType|title }} Jobs</a></p>

        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Job</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                <tr>
                    <th class="col-md-1">{{ loop.index }}</th>
                    <td class="col-md-9">
                        <pre>{{ job }}</pre>
                    </td>
                    <td class="col-md-2">
                        <a href="{{ path('job_remove', {'jobType': 'recurring', 'timestamp': timestamp}) }}" class="btn btn-danger">Remove</a>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
